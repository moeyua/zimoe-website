---
import Column from '../layouts/Column.astro'
import Layout from '../layouts/Layout.astro'
import Row from '../layouts/Row.astro'
import Widget from '../layouts/Widget.astro'
import IconAttachFile from '../assets/icon/i-attach-file.svg'
import Carousel from '../components/Carousel.astro'
import Cat from '../assets/img/cat.png'
import ArtPixel from '../assets/img/art-pixel.png'
import MarketingIllustration1 from '../assets/img/marketing-illustration-1.png'
import MarketingIllustration2 from '../assets/img/marketing-illustration-2.png'
import FunnySchool from '../assets/img/funny-school.png'
import GreenFinanceMonitor from '../assets/img/green-finance-monitor.png'
import SmartPark from '../assets/img/smart-park.png'
import ThreeCimWatch from '../assets/img/3cim-watch.png'
---

<Layout title="Hey!">
  <Row class="h-30">
    <Widget class="w-198 h-30 bg-[linear-gradient(90deg,#D4F24E_0%,#9BEDF8_100%)] flex items-center gap-6">
      <!-- <img src={Avatar.src} alt="zimoe's avatar" class="w-18 h-18 b-rd-9" /> -->
      <p class="text-6">I'm Zimoe , a UI Designer.</p>
    </Widget>
    <Widget class="w-96 h-30 bg-#EFF7F7 flex items-center gap-3">
      <img src={IconAttachFile.src} alt="zimoe's resume" class="w-10 h-10" />
      <a href="/resume.pdf" class="text-6">View my resume here.</a>
    </Widget>
  </Row>
  <Row class="h-72.5">
    <Widget class="w-147 h-72.5 bg-#EFF7F7 text-6">
      <a class="flex flex-col h-full justify-between" href="/mobile">
        <p>移动端项目</p>
        <Carousel class="self-end" images={[FunnySchool, ArtPixel]} />
      </a>
    </Widget>
    <Column class="w-70.5">
      <Widget class="text-6 w-70.5 h-46.5 bg-#EFF7F7">
        <div class="flex flex-col h-full justify-between">
          <p>其他项目</p>
          <Carousel
            class="self-end"
            images={[MarketingIllustration1, MarketingIllustration2]}
            size={{ width: 136, height: 76 }}
          />
        </div>
      </Widget>
      <Widget class="w-70.5 h-20 bg-#D5F24F" />
    </Column>
    <Widget class="w-70.5 h-72.5 bg-#9BEDF8 flex justify-between">
      <div class="flex items-center justify-center gap-6 w-full h-full">
        <div class="flex flex-col items-center gap-6">
          <a class="i-simple-icons-gmail inline-block w-22.5 h-22.5 c-white" href="mailto:zimoaaa@gmail.com"></a>
          <a
            class="i-simple-icons-twitter inline-block w-22.5 h-22.5 c-white"
            href="https://x.com/Zimoe_"
            target="_blank"></a>
        </div>

        <div class="flex items-center shrink-0 w-0.5">
          <div class="bg-white w-full h-40"></div>
        </div>

        <div class="flex flex-col items-center gap-6">
          <a
            class="i-simple-icons-dribbble inline-block w-22.5 h-22.5 c-white"
            href="https://dribbble.com/Zimoe"
            target="_blank"></a>
          <a
            class="i-simple-icons-behance inline-block w-22.5 h-22.5 c-white"
            href="https://www.behance.net/ba48845b"
            target="_blank"></a>
        </div>
      </div>
      <!-- <div class="grid cols-22.5-0.5-22.5 rows-22.5-22.5 grid-flow-col justify-center gap-6 w-full h-full p-0">
        <a class="i-simple-icons-gmail inline-block w-22.5 h-22.5 c-white"></a>
        <a class="i-simple-icons-twitter inline-block w-22.5 h-22.5 c-white"></a>

        <div class="row-1-4 flex items-center">
          <div class="bg-white w-full h-40"></div>
        </div>

        <a class="i-simple-icons-dribbble inline-block w-22.5 h-22.5 c-white"></a>
        <a class="i-simple-icons-behance inline-block w-22.5 h-22.5 c-white"></a>
      </div> -->
    </Widget>
  </Row>
  <Row class="h-70.5">
    <Widget class="w-56.4 h-70.5 bg-#FED133 flex justify-center items-center">
      <img src={Cat.src} alt="zimoe's cat" class="w-56.25 h-49.25 b-rd-28" />
    </Widget>
    <Widget class="w-233.5 h-70.5 bg-#EFF7F7 text-6">
      <a class="flex flex-col h-full justify-between" href="/web">
        <p>Web 端项目</p>
        <Carousel class="self-end" images={[SmartPark, ThreeCimWatch, GreenFinanceMonitor]} />
      </a>
    </Widget>
  </Row>
</Layout>
